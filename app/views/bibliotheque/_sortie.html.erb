	<%= link_to oeuvre.titre_oeuvre+' ('+oeuvre.date.to_s+')', formation_module_path(:formation => oeuvre.id) %><br><% end %>
<% when "19e" %>
	<% @oeuvres.where('date > 1800 and date < 1901').each do |oeuvre| %>
	<%= link_to oeuvre.titre_oeuvre+' ('+oeuvre.date.to_s+')', formation_module_path(:formation => oeuvre.id) %><br><% end %>
<% when "20e" %>
	<% @oeuvres.where('date > 1900 and date < 2001').each do |oeuvre| %>
	<%= link_to oeuvre.titre_oeuvre+' ('+oeuvre.date.to_s+')', formation_module_path(:formation => oeuvre.id) %><br><% end %>
<% when "21e" %>
