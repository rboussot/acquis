<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Titre genre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.id %></td>
        <td><%= genre.titre_genre %></td>
        <td><%= link_to image_tag("voir.png"), genre %></td>
        <td><%= link_to image_tag("edit.png"), edit_genre_path(genre) %></td>
        <td><%= link_to image_tag("suppr.png"), genre, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class= "ajouter"><%= link_to '+', new_genre_path %></div>
