<div class = "aside">

<% case params['controller'] %>
<% when 'bibliotheque' %>

	<% if params['action'] == 'nouveautes' %><strong><% end %>
	<%= link_to "Nouveautés", bibliotheque_nouveautes_path %></strong><br><br>

	<h3>Français </h3>

	<% if params['action'] == 'parauteur' or params['action'] == 'parsiecle' or params['action'] == 'parniveau' %><strong><% end %>
	<%= link_to "Commentaires composés", bibliotheque_parauteur_path %></strong><br><br>

	<% if params['action'] == 'methode' %><strong><% end %>
	<%= link_to "Méthodes et techniques", bibliotheque_methode_path %></strong><br><br>

<% when 'mes_cours' %>

	<% if params['action'] == 'nouveautes' %><strong><% end %>
	<%= link_to "Nouveautés", bibliotheque_nouveautes_path %></strong><br><br>

	<h3>Français </h3>

	<% if params['action'] == 'litterature' %><strong><% end %>
	<%= link_to "Littérature", mes_cours_litterature_path %></strong><br><br>

	<% if params['action'] == 'methode' %><strong><% end %>
	<%= link_to "Méthodes et techniques", bibliotheque_methode_path %></strong><br><br>

<% when 'accueil' %>

	<% if params['action'] == 'bio' %>
	<%= link_to "Compte gratuit !", '../users/new' %><br><br>
	<strong><%= link_to "Voir la méthodologie", 'bio' %></strong><br><br>

	<% else %>
	<%= link_to "Compte gratuit !", 'users/new' %><br><br>
	<%= link_to "Voir la méthodologie", 'accueil/bio' %><br><br>
	<% end %>

<% when 'users' %>

	<strong><%= link_to "Compte gratuit !", 'users/new' %></strong><br><br>
	<%= link_to "Voir la méthodologie", '../accueil/bio' %><br><br>

<% end %>
</div>
