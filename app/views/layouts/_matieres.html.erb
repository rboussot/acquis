	<%= link_to "Nouveautés", bibliotheque_nouveautes_path %></strong><br><br>

	<h3>Français </h3>

	<% if params['action'] == 'parauteur' or params['action'] == 'parsiecle' or params['action'] == 'parniveau' %><strong><% end %>
