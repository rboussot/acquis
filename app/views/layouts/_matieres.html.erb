	<% if params['action'] == 'methode' %><strong><% end %>
	<%= link_to "Méthode", bibliotheque_methode_path %></strong><br><br>

	<% if params['action'] == 'grammaire' %><strong><% end %>
	<%= link_to "Grammaire", bibliotheque_grammaire_path %></strong><br><br>

	<% if params['action'] == 'stylistique' %><strong><% end %>
