<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Oeuvre</th>
      <th>Theme</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lienthemes.each do |lientheme| %>
      <tr>
        <td><%= lientheme.id %></td>
        <td><%= lientheme.oeuvre.titre_oeuvre %></td>
        <td><%= lientheme.theme.titre_theme %></td>
        <td><%= link_to image_tag("voir.png"), lientheme %></td>
        <td><%= link_to image_tag("edit.png"), edit_lientheme_path(lientheme) %></td>
        <td><%= link_to image_tag("suppr.png"), lientheme, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class= "ajouter"><%= link_to '+', new_lientheme_path %></div>