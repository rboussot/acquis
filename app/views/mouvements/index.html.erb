<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Titre mouvement</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mouvements.each do |mouvement| %>
      <tr>
        <td><%= mouvement.id %></td>
        <td><%= mouvement.titre_mouvement %></td>
        <td><%= link_to image_tag("voir.png"), mouvement %></td>
        <td><%= link_to image_tag("edit.png"), edit_mouvement_path(mouvement) %></td>
        <td><%= link_to image_tag("suppr.png"), mouvement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class = "ajouter"><%= link_to '+', new_mouvement_path %></div>
