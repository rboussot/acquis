<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Titre oeuvre</th>
      <th>Auteur</th>
      <th>Genre</th>
      <th>Mouvement</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @oeuvres.each do |oeuvre| %>
      <tr>
        <td><%= oeuvre.id %></td>
        <td><%= oeuvre.titre_oeuvre %></td>
        <td><%= oeuvre.auteur.nom_entier %></td>
        <td><%= oeuvre.genre.titre_genre %></td>
        <td><%= oeuvre.mouvement.titre_mouvement %></td>
        <td><%= oeuvre.date %></td>
        <td><%= link_to image_tag("voir.png"), oeuvre %></td>
        <td><%= link_to image_tag("edit.png"), edit_oeuvre_path(oeuvre) %></td>
        <td><%= link_to image_tag("suppr.png"), oeuvre, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class= "ajouter"><%= link_to '+', new_oeuvre_path %></div>
