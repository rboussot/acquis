<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Oeuvre</th>
      <th>Titre passage</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @passages.each do |passage| %>
      <tr>
        <td><%= passage.id %></td>
        <td><%= passage.oeuvre.titre_oeuvre %></td>
        <td><%= passage.titre_passage %></td>
        <td><%= link_to image_tag("play.jpg"), passage.video %></td>
        <td><%= link_to image_tag("voir.png"), passage %></td>
        <td><%= link_to image_tag("edit.png"), edit_passage_path(passage) %></td>
        <td><%= link_to image_tag("suppr.png"), passage, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class= "ajouter"><%= link_to '+', new_passage_path %></div>